<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:layout_constraintTop_toBottomOf="@id/buttonBack"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/buttonVehicleType"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Vehicle Type"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="10dp" />

    <Button
        android:id="@+id/buttonLotType"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Type of Lot"
        app:layout_constraintTop_toBottomOf="@id/buttonVehicleType"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="69dp" />

    <Button
        android:id="@+id/buttonCost"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Cost"
        app:layout_constraintTop_toBottomOf="@id/buttonLotType"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="115dp" />

    <Button
        android:id="@+id/buttonProximity"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Proximity to Destination"
        app:layout_constraintTop_toBottomOf="@id/buttonCost"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="160dp" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Back"
        app:layout_constraintTop_toBottomOf="@id/buttonProximity"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="205dp" />


    <Button
        android:id="@+id/buttonListview"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="56dp"
        android:text="List View"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/buttonResetFilters"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="11dp"
        android:text="Reset Filters"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
